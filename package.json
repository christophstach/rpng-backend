{
  "name": "random-project-name-generator-backend",
  "version": "1.0.0",
  "description": "The backend for the random project name generator",
  "repository": "https://github.com/christophstach/random-project-name-generator/tree/master/backend",
  "author": "Christoph Stach",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "NODE_ENV=production node dist/main.js",
    "build": "rm -rf dist && tsc",
    "start:dev": "NODE_ENV=development nodemon",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "deploy:gcloud": "npm run build && gcloud app deploy"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/graphql": "^3.0.0",
    "@nestjs/jwt": "0.0.1",
    "@nestjs/mongoose": "^5.0.0",
    "@nestjs/passport": "^1.1.0",
    "@sendgrid/mail": "^6.3.1",
    "apollo-server-express": "^2.0.0-rc.12",
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.0.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.5",
    "hbs": "^4.0.1",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "typescript": "^2.6.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.0",
    "@types/bcryptjs": "^2.4.1",
    "@types/express": "^4.0.39",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/passport": "^0.4.6",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.5",
    "@types/uuid": "^3.4.3",
    "jest": "^23.4.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.1.0",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "^5.11.0",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
